<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>Urban Quest</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>Urban Quest</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	
	<!-- Location permissions for GPS-based quest tracking -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>Urban Quest needs access to your location to track your progress on quests and guide you to quest stops.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>Urban Quest needs access to your location to track your progress on quests and send notifications when you reach quest stops.</string>
	<key>NSLocationAlwaysUsageDescription</key>
	<string>Urban Quest needs access to your location to track your progress on quests and send notifications when you reach quest stops.</string>
	
	<!-- Camera permissions for photo challenges -->
	<key>NSCameraUsageDescription</key>
	<string>Urban Quest needs access to your camera to take photos for quest challenges and document your adventures.</string>
	
	<!-- Photo library permissions for quest photos -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>Urban Quest needs access to your photo library to save quest photos and share your adventure memories.</string>
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>Urban Quest needs permission to save quest photos to your photo library.</string>
	
	<!-- Microphone permission (optional for video/audio challenges) -->
	<key>NSMicrophoneUsageDescription</key>
	<string>Urban Quest may need access to your microphone for video challenges and quest recordings.</string>
	
	<!-- Motion and fitness permissions for step tracking -->
	<key>NSMotionUsageDescription</key>
	<string>Urban Quest tracks your steps and movement to show your quest progress and measure distance walked during quests.</string>
	
	<!-- Background processing for quest tracking -->
	<key>UIBackgroundModes</key>
	<array>
		<string>processing</string>
	</array>
</dict>
</plist>
